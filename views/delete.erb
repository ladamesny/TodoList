<% if @todo %>
  <p>Are you sure you want to delete the folowing todo: <em>"<%= @todo.content %>"</em>? </p>
  <form action="/<%= @todo.id %>" method="post">
    <input type="hidden" name="_method" value="delete">
    <input type="submit" value="Yes, Delete It!">
    <a href="/<%= @todo.id%>">  Cancel</a>
  </form>
<% else %>
  <p>Todo not found.</p>
<% end %>